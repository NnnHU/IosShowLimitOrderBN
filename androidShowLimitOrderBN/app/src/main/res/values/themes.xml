<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.AndroidShowLimitOrderBN" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/secondary_dark</item>
        <item name="android:navigationBarColor">@color/secondary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/secondary_dark</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.AndroidShowLimitOrderBN.SplashScreen" parent="Theme.AndroidShowLimitOrderBN">
        <item name="android:windowBackground">@color/secondary_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>